{
  "name": "developers.redhat.com",
  "version": "1.0.0",
  "description": "RHDP e2e testing",
  "main": "index.js",
  "scripts": {
    "e2e:local-drupal": "wdio tests/config/wdio.conf.local.js --testType=drupal --browser=chrome --profile=drupal",
    "e2e:local-desktop": "wdio tests/config/wdio.conf.local.js --browser=chrome --profile=desktop --mochaOpts.grep=@downloads --mochaOpts.invert=true",
    "e2e:local-mobile": "wdio tests/config/wdio.conf.local.js --browser=mobile --profile=mobile --mochaOpts.grep=@downloads --mochaOpts.invert=true --tags=not:desktop",
    "e2e:local": "npm run e2e:local-drupal && npm run e2e:local-desktop && npm run e2e:local-mobile",
    "e2e:ci": "npm install && wdio tests/config/wdio.conf.ci.js",
    "e2e:ci-drupal": "wdio tests/config/wdio.conf.ci.js --testType=drupal --browser=chrome --profile=drupal",
    "e2e:ci-desktop": "wdio tests/config/wdio.conf.ci.js --browser=chrome  --testType=export --profile=desktop",
    "e2e:ci-mobile": "wdio tests/config/wdio.conf.ci.js --browser=mobile --profile=mobile --testType=export --tags=not:desktop",
    "e2e:browserstack": "wdio test/config/wdio.conf.browserstack.js",
    "lint": "eslint config tests"
  },
  "author": "Ian Hamilton (ihamilto@redhat.com)",
  "license": "ISC",
  "engines": {
    "node": "8.16.0",
    "npm": "6.4.1"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@types/expect": "^1.20.3",
    "@wdio/allure-reporter": "^5.7.2",
    "@wdio/dot-reporter": "^5.7.2",
    "@wdio/reporter": "^5.7.2",
    "@wdio/selenium-standalone-service": "^5.7.2",
    "@wdio/spec-reporter": "^5.7.2",
    "@wdio/sync": "^5.7.3",
    "chai": "^4.2.0",
    "eslint": "^5.15.1",
    "eslint-config-google": "^0.12.0",
    "eslint-plugin-chai-expect": "^2.0.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "async": "^2.5.0",
    "faker": "4.1.0",
    "fs-extra": "^5.0.0",
    "imap-simple": "4.0.0",
    "path": "^0.12.7",
    "request": "^2.85.0",
    "sync-request": "6.0.0",
    "asyncawait": "^1.0.6",
    "cross-var": "^1.1.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@wdio/cli": "^5.7.5",
    "@wdio/local-runner": "^5.7.5",
    "@wdio/mocha-framework": "^5.7.3",
    "allure-commandline": "^2.9.0",
    "mocha": "^6.0.2",
    "mocha-tags": "^1.0.1",
    "webdriverio": "^5.7.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
