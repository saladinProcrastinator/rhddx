{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["src/scripts/@rhd/js"],
        "exclude": ["src/scripts/@rhd/js/namespace.js"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "docs/scripting",
        "recurse": true
    }
}